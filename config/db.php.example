<?php
// Đây là file mẫu. Hãy copy file này thành 'db.php' và điền thông tin CSDL của bạn.
// File 'db.php' thật sẽ KHÔNG được đẩy lên Git (do đã có trong .gitignore).

define('DB_HOST', 'localhost');
define('DB_USER', 'root');
define('DB_PASS', 'PASSWORD_CUA_BAN'); // <-- Điền mật khẩu root XAMPP của bạn
define('DB_NAME', 'laptop_store');
define('DB_PORT', 3307); // <-- THÊM DÒNG NÀY

// 1. Tạo kết nối
// Thêm DB_PORT làm tham số thứ 5
$conn = new mysqli(DB_HOST, DB_USER, DB_PASS, DB_NAME, DB_PORT); // <-- CẬP NHẬT DÒNG NÀY

// 2. Kiểm tra kết nối
if ($conn->connect_error) {
    // Dừng chương trình và báo lỗi nếu kết nối thất bại
    die("Lỗi kết nối Cơ sở dữ liệu: " . $conn->connect_error);
}

// 3. Cài đặt charset thành utf8mb4 (tốt hơn utf8)
$conn->set_charset("utf8mb4");

// Giờ đây, biến $conn đã sẵn sàng để được sử dụng ở bất kỳ đâu
?>